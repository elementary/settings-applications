<?xml version="1.0" encoding="UTF-8"?>
<component type="addon">
  <id>io.elementary.settings.applications</id>
  <extends>io.elementary.settings</extends>
  <translation type="gettext">io.elementary.settings.applications</translation>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-2.0+</project_license>

  <icon type="stock">io.elementary.settings.applications</icon>
  <name>Applications Settings</name>
  <summary>Manage default and startup applications</summary>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/elementary/switchboard-plug-applications/8.0.0/data/screenshot-permissions.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/elementary/switchboard-plug-applications/8.0.0/data/screenshot-defaults.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/elementary/switchboard-plug-applications/8.0.0/data/screenshot-startup.png</image>
    </screenshot>
  </screenshots>

  <content_rating type="oars-1.1" />

  <url type="bugtracker">https://github.com/elementary/switchboard-plug-applications/issues</url>
  <url type="donation">https://elementary.io/get-involved#funding</url>
  <url type="help">https://github.com/elementary/switchboard-plug-applications/discussions</url>
  <url type="homepage">https://elementary.io/</url>
  <url type="translate">https://l10n.elementary.io/engage/switchboard/</url>

  <developer id="org.elementaryos">
    <name>elementary, Inc.</name>
  </developer>
  <project_group>elementary</project_group>
  <update_contact>contact_at_elementary.io</update_contact>

  <releases>
    <release version="8.1.0" date="2024-12-11" urgency="medium">
      <description>
        <p>Minor updates:</p>
        <ul>
          <li>Updated translations</li>
        </ul>
      </description>
      <issues>
        <issue url="https://github.com/elementary/switchboard-plug-applications/pull/238">Add Notifications settings</issue>
      </issues>
    </release>

    <release version="8.0.0" date="2024-07-26" urgency="medium">
      <description>
        <p>A Big Redesign!</p>
        <ul>
          <li>A new icon</li>
          <li>Redesigned layout that makes it faster to get to app permissions</li>
          <li>Portal permissions like Backgrounding, Location, Screenshots, and Wallpapers</li>
          <li>Updated translations</li>
        </ul>
      </description>
      <issues>
        <issue url="https://github.com/elementary/switchboard-plug-applications/issues/148">Add explanation of permissions panel itself, remove explanations from every permission</issue>
        <issue url="https://github.com/elementary/switchboard-plug-applications/issues/212">Setting to allow Background App Activity</issue>
        <issue url="https://github.com/elementary/switchboard-plug-applications/issues/220">Setting for Screenshot portal</issue>
      </issues>
    </release>

    <release version="7.0.1" date="2023-08-25" urgency="medium">
      <description>
        <p>Minor updates:</p>
        <ul>
          <li>Updated translations</li>
        </ul>
      </description>
      <issues>
        <issue url="https://github.com/elementary/switchboard-plug-applications/issues/146">Permissions: Make applist searchable</issue>
        <issue url="https://github.com/elementary/music/issues/758">No music player set in applications settings</issue>
      </issues>
    </release>

    <release version="7.0.0" date="2023-06-26" urgency="medium">
      <description>
        <p>New features:</p>
        <ul>
          <li>Properly handle autostart files created by the Background Portal</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>App chooser in Startup is a dialog instead of a popover</li>
          <li>Improve screen reader descriptions</li>
          <li>Updated translations</li>
        </ul>
      </description>
      <issues>
        <issue url="https://github.com/elementary/switchboard-plug-applications/issues/59">Bigger + and - icons to add/remove things</issue>
        <issue url="https://github.com/elementary/switchboard-plug-applications/issues/77">Permissions: reset button should be insensitive if already default</issue>
      </issues>
    </release>

    <release version="6.0.1" date="2021-09-27" urgency="medium">
      <description>
        <p>Minor updates:</p>
        <ul>
          <li>Fix an issue with setting the incorrect app for certain files types</li>
          <li>Don't overwrite custom overrides when unnecessary</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>

    <release version="6.0.0" date="2021-07-15" urgency="medium">
      <description>
        <p>New features:</p>
        <ul>
          <li>Manage permissions for Flatpak apps</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>Show custom launcher files</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>

    <release version="2.1.7" date="2020-04-08" urgency="medium" />
    <release version="2.1.6" date="2019-11-15" urgency="medium" />
  </releases>
</component>
