<?xml version="1.0" encoding="UTF-8"?>
<component type="addon">
  <id>io.elementary.switchboard.applications</id>
  <extends>io.elementary.switchboard</extends>
  <translation type="gettext">applications-plug</translation>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-2.0+</project_license>

  <icon type="stock">io.elementary.settings.applications</icon>
  <name>Applications Settings</name>
  <summary>Manage default and startup applications</summary>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/elementary/switchboard-plug-applications/7.0.0/data/screenshot.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/elementary/switchboard-plug-applications/7.0.0/data/screenshot-startup.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/elementary/switchboard-plug-applications/7.0.0/data/screenshot-permissions.png</image>
    </screenshot>
  </screenshots>

  <content_rating type="oars-1.1" />

  <url type="bugtracker">https://github.com/elementary/switchboard-plug-applications/issues</url>
  <url type="donation">https://elementary.io/get-involved#funding</url>
  <url type="help">https://github.com/elementary/switchboard-plug-applications/discussions</url>
  <url type="homepage">https://elementary.io/</url>
  <url type="translate">https://l10n.elementary.io/engage/switchboard/</url>

  <developer_name>elementary, Inc.</developer_name>
  <project_group>elementary</project_group>
  <update_contact>contact_at_elementary.io</update_contact>

  <releases>
    <release version="7.0.0" date="2023-06-07" urgency="medium">
      <description>
        <p>New features:</p>
        <ul>
          <li>Properly handle autostart files created by the Background Portal</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>App chooser in Startup is a dialog instead of a popover</li>
          <li>Improve screen reader descriptions</li>
          <li>Updated translations</li>
        </ul>
      </description>
      <issues>
        <issue url="https://github.com/elementary/switchboard-plug-applications/issues/59">Bigger + and - icons to add/remove things</issue>
        <issue url="https://github.com/elementary/switchboard-plug-applications/issues/77">Permissions: reset button should be insensitive if already default</issue>
      </issues>
    </release>

    <release version="6.0.1" date="2021-09-27" urgency="medium">
      <description>
        <p>Minor updates:</p>
        <ul>
          <li>Fix an issue with setting the incorrect app for certain files types</li>
          <li>Don't overwrite custom overrides when unnecessary</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>

    <release version="6.0.0" date="2021-07-15" urgency="medium">
      <description>
        <p>New features:</p>
        <ul>
          <li>Manage permissions for Flatpak apps</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>Show custom launcher files</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>

    <release version="2.1.7" date="2020-04-08" urgency="medium">
      <description>
        <p>Updated translations</p>
      </description>
    </release>

    <release version="2.1.6" date="2019-11-15" urgency="medium">
      <description>
        <p>Fix issues with OnlyShowIn and Snap apps</p>
        <p>Updated translations</p>
      </description>
    </release>
  </releases>
</component>
